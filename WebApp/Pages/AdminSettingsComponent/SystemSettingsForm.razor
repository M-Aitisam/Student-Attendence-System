@page "/SystemSettingForm"
@using ClassLibraryModel


<EditForm Model="Settings" OnValidSubmit="HandleSave" class="col-md-4" >
    <DataAnnotationsValidator />
    <div class="form-group">
        <label>Attendance Threshold (%)</label>
        <InputNumber class="form-control" @bind-Value="Settings.AttendanceThreshold" />
    </div>
    <div class="form-group">
        <label>Academic Year</label>
        <InputText class="form-control" @bind-Value="Settings.AcademicYear" />
    </div>
    <div class="form-group">
        <label>Notifications Enabled</label>    
        <InputCheckbox class="form-check-input" @bind-Value="Settings.EnableNotifications" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</EditForm>

@code {
    [Parameter] public SystemSettings Settings { get; set; } = new();
    [Parameter] public EventCallback OnSave { get; set; }

    private async Task HandleSave()
    {
        if (OnSave.HasDelegate)
        {
            await OnSave.InvokeAsync();
        }
    }
}
