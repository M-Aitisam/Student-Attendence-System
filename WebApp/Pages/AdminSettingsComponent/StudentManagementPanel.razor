@page "/StudentManagementPanel"
@using ClassLibraryModel
@using ClassLibraryDal
@inject StudentService StudentService

<div class="col-md-7">
<h3>Manage Students</h3>
<button class="btn btn-success mb-3" @onclick="ShowAddStudentModal">Add Student</button>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in students)
        {
            <tr>
                <td>@student.Id</td>
                <td>@student.Name</td>
                <td>@student.Email</td>
                <td>
                    <button class="btn btn-warning btn-sm" @onclick="() => ShowEditStudentModal(student)">Edit</button>
                    <button class="btn btn-danger btn-sm" @onclick="() => DeleteStudent(student.Id)">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Modal -->
@if (isModalVisible)
{
    <div class="modal show d-block" style="background-color: rgba(0, 0, 0, 0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@modalTitle</h5>
                    <button type="button" class="btn-close" @onclick="HideModal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Name</label>
                        <input type="text" class="form-control" @bind="currentStudent.Name" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Email</label>
                        <input type="email" class="form-control" @bind="currentStudent.Email" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="HideModal">Cancel</button>
                    <button type="button" class="btn btn-primary" @onclick="SaveStudent">Save</button>
                </div>
            </div>
        </div>
    </div>
}

</div>
@code {
    private List<Student> students = new List<Student>();
    private Student currentStudent = new Student();
    private string modalTitle = string.Empty;
    private bool isModalVisible = false;

    protected override void OnInitialized()
    {
        students = StudentService.GetStudents();
    }

    private void ShowAddStudentModal()
    {
        modalTitle = "Add Student";
        currentStudent = new Student(); // Reset for new entry
        isModalVisible = true;
    }

    private void ShowEditStudentModal(Student student)
    {
        modalTitle = "Edit Student";
        currentStudent = new Student
            {
                Id = student.Id,
                Name = student.Name,
                Email = student.Email
            };
        isModalVisible = true;
    }

    private void SaveStudent()
    {
        if (currentStudent.Id == 0)
        {
            // Add new student
            StudentService.AddStudent(currentStudent);
        }
        else
        {
            // Update existing student
            StudentService.EditStudent(currentStudent.Id, currentStudent);
        }
        RefreshStudents();
        HideModal();
    }

    private void DeleteStudent(int id)
    {
        StudentService.DeleteStudent(id);
        RefreshStudents();
    }

    private void RefreshStudents()
    {
        students = StudentService.GetStudents();
    }

    private void HideModal()
    {
        isModalVisible = false;
    }
}
